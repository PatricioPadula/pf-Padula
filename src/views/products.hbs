<h1 class="mx-3">Productos</h1>

    <div class="m-3 d-flex">
        {{#each products}}
                <div class="mx-3 bg-primary-subtle border border-primary-subtle rounded-3">
                    <a class="text-decoration-none text-black">
                        <div class="p-3">
                            <p><b>Nombre:</b> {{name}}</p>
                            <p><b>Precio:</b>  ${{price}}</p>
                            <p><b>Categoria:</b>  {{category}}</p>
                        </div>    
                    </a>  
                </div>
        {{/each}}
    </div>


